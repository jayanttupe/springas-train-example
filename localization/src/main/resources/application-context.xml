<?xml version="1.0" encoding="utf-8"?>
<objects xsi:schemaLocation="http://www.springactionscript.org/schema/objects
        http://www.springactionscript.org/schema/objects/spring-actionscript-objects-1.0.xsd"
        xmlns="http://www.springactionscript.org/schema/objects"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <object id="resourceManager" class="mx.resources.ResourceManager" factory-method="getInstance"/>

    <object id="localizationProcessor"
            class="org.springextensions.actionscript.localization.LocalizationStageProcessor">
        <property name="resourceManager" ref="resourceManager"/>
        <property name="bundleName" value="myResources"/>
    </object>

</objects>