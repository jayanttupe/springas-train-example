<?xml version="1.0" encoding="UTF-8"?>
<objects xmlns="http://www.springactionscript.org/schema/objects"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://www.springactionscript.org/schema/objects
					http://www.springactionscript.org/schema/objects/spring-actionscript-objects-1.0.xsd">

	<object id="simpleSelector"
			class="stage.SimpleObjectSelector"/>

	<!-- Adding the autowiring processor will make sure that stage components will also be processed
		 by the EventMetadataProcessor -->
	<object id="autowiringStageProcessor"
			class="org.springextensions.actionscript.stage.DefaultAutowiringStageProcessor">
		<property name="objectSelector"
				  ref="simpleSelector"/>
	</object>

	<object id="eventMetadataProcessor"
			class="processor.EventMetadataProcessor">
		<property name="applicationModel"
				  ref="applicationModel"/>
	</object>

	<object id="applicationModel" class="model.ApplicationModel"/>

</objects>
